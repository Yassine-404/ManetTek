{% extends 'base.html.twig' %}

{% block title %}Tournements index{% endblock %}

{% block body %}
    <h1>Tournements index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Jeu</th>
                <th>Date</th>
                <th>Lieu</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tournement in tournements %}
            <tr>
                <td>{{ tournement.id }}</td>
                <td>{{ tournement.nom }}</td>
                <td>{{ tournement.jeu }}</td>
                <td>{{ tournement.date ? tournement.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tournement.lieu }}</td>
                <td>{{ tournement.description }}</td>
                <td>
                    <a href="{{ path('app_tournements_show', {'id': tournement.id}) }}">show</a>
                    <a href="{{ path('app_tournements_edit', {'id': tournement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tournements_new') }}">Create new</a>
{% endblock %}
